<% layout("/layouts/boilerplate") %> 

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter {
        text-align: center;
        margin-right: 1.6rem;
        margin-top: 1.4rem;
        margin-bottom: 0.6rem;
        opacity: 0.7;
        transition: opacity 0.3s ease-in-out;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info {
        display: none;
    }
    #taxSwitchButton {
        border: 1px solid black;
        height: 2.4rem;
        border-radius: 1rem;
        padding: 1rem;
        margin-left: 1rem;
        display: flex;
        align-items: center;
        cursor: pointer;
    }
    #filters {
    display: flex;
    flex-wrap: nowrap; /* Prevents wrapping */
    overflow-x: auto; /* Enables horizontal scrolling */
    white-space: nowrap; /* Keeps items in a single row */
    padding-bottom: 0.5rem; /* Adds some spacing */
    scrollbar-width: thin;
    scrollbar-color: #bbb transparent;
}

/* Scrollbar for Webkit browsers */
#filters::-webkit-scrollbar {
    height: 6px;
}
#filters::-webkit-scrollbar-thumb {
    background-color: #bbb;
    border-radius: 3px;
}
#filters::-webkit-scrollbar-track {
    background: transparent;
}

</style>

<!-- Filters Section -->
<div class="collapse navbar-collapse" id="filters">
    <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
    <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
    <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
    <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
    <div class="filter"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></div>
    <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Amazing Pools</p></div>
    <div class="filter"><i class="fa-solid fa-cow"></i><p>Farms</p></div>
    <div class="filter"><i class="fa-regular fa-snowflake"></i><p>Arctic</p></div>
    <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
    <div class="filter"><i class="fa-solid fa-igloo"></i><p>Domes</p></div>
    <div class="filter"><i class="fa-solid fa-ship"></i><p>Boats</p></div>
    
    <!-- Tax Toggle Switch -->
    <div id="taxSwitchButton">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total after Taxes</label>
        </div>
    </div>
</div>

<!-- Listings Section -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
    <% for (let listing of allListings) { %>
    <div class="col">
        <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
            <div class="card listing-card shadow-sm">
                <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem; object-fit: cover;" alt="Image of <%= listing.title %>">
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377;<%= listing.price %>
                        <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    </div>
    <% } %> 
</div>

<script>
    document.getElementById("flexSwitchCheckDefault").addEventListener("change", function() {
        let taxInfoElements = document.getElementsByClassName("tax-info");
        for (let info of taxInfoElements) {
            info.style.display = this.checked ? "inline" : "none";
        }
    });
</script>
